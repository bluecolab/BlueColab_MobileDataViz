{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/assets/*": [
                "./assets/*"
            ],     
            "@/modules/*": [
                "./modules/*"
            ]     
       }
    },
    "include": [
        "src/app/**/*",
        "src/components/**/*",
        "src/contexts/**/*",
        "src/hooks/**/*",
        "src/types/**/*",
        "src/utils/**/*",
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ]
}
